<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".component.service.CheckServiceActivity">

    <TextView
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:text="检测" />

    <Button
        android:id="@+id/bt_start_service"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="StartService启动" />

    <Button
        android:id="@+id/bt_stop_service"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="StopService停止" />

    <Button
        android:id="@+id/bt_bind_service"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="bindService启动" />
    <Button
        android:id="@+id/bt_unbind_service"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="unBind停止" />

    <Button
        android:id="@+id/bt_stop_myself"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="stopMySelf停止自己" />
</LinearLayout>