<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/bgBackground"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/dimen_30"
    android:paddingTop="@dimen/dimen_30"
    android:paddingBottom="@dimen/dimen_30"
    tools:context="com.casanube.medical.ui.CameraFragment">

    <FrameLayout
        android:id="@+id/camera_layout"
        android:layout_width="800dp"
        android:layout_height="450dp"
        android:layout_marginRight="@dimen/dimen_20" >

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/dimen_20"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/camera_doctor_img"
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_gravity="center"
            android:layout_marginBottom="15dp"
            android:layout_weight="1"
            android:src="@mipmap/nurse" />

        <FrameLayout
            android:id="@+id/camera_doctor"
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_marginBottom="15dp"
            android:layout_weight="1"
            android:background="@drawable/bg_round_camera"
            android:visibility="gone"></FrameLayout>

        <TextView
            android:id="@+id/camera_state"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@drawable/bg_round_dark_green"
            android:gravity="center"
            android:paddingTop="@dimen/dimen_10"
            android:paddingBottom="@dimen/dimen_10"
            android:text="@string/main_camera_connecting"
            android:textColor="@android:color/white"
            android:textSize="@dimen/main_title_25" />

        <TextView
            android:id="@+id/tv_ble_check"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_10"
            android:background="@drawable/bg_round_dark_green"
            android:gravity="center"
            android:paddingTop="@dimen/dimen_10"
            android:paddingBottom="@dimen/dimen_10"
            android:text="开始测量"
            android:textColor="@android:color/white"
            android:textSize="@dimen/main_title_24"
            android:textStyle="bold" />


    </LinearLayout>

</LinearLayout>